{
    "manifest_version" : 2,

    "name" : "Hide Facebook Post Likes (Beta)",
    "description" : "Life is not a popularity contest. Hides the number of likes and shares received on Facebook posts so you can stop comparing yourself to everyone else.",
    "version" : "0.5",

    "icons" : {
        "16" : "img/thumb16.png",
        "48" : "img/thumb48.png",
        "128" : "img/thumb128.png"
    },      

    "content_scripts": [ {
       "include_globs": [ "*.facebook.*" ],
       "js": [ "js/jquery-1.9.0.min.js", "js/jquery.livequery.js", "js/main.js" ],
       "matches": [ "http://*.facebook.com/*", "https://*.facebook.com/*" ],
       "run_at": "document_start"
    } ],

    "homepage_url" : "http://www.kortaggio.com/", 

    "permissions" : [
    "https://*.facebook.com/*",
    "http://*.facebook.com/*"
    ],

    "browser_action": {
        "default_icon": "img/icon.png",
        "default_title" : "Hide Facebook Post Likes (Beta)",
        "default_popup": "popup.html"
    },

    "update_url": "http://clients2.google.com/service/update2/crx"
}